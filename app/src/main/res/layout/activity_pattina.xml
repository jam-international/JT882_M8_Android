<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_StepAvanti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:text="Step+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_piu"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_weight="1"
        android:background="@drawable/tasto_piu"
        app:layout_constraintStart_toEndOf="@+id/frameLayout_pattina"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_meno"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_weight="1"
        android:background="@drawable/tasto_meno"
        app:layout_constraintStart_toStartOf="@+id/button_piu"
        app:layout_constraintTop_toBottomOf="@+id/button_piu" />

    <Button
        android:id="@+id/button_exit"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/tasto_exit"
        android:onClick="onclick_button_Exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout_pattina"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:background="@drawable/border1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="559dp"
        android:layout_height="260dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/border1"
        app:layout_constraintStart_toEndOf="@+id/frameLayout_pattina"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_testo_cucitura_sotto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Flap locking stitching line"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_arrow_up"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginStart="152dp"
            android:layout_marginTop="84dp"
            android:layout_weight="1"
            android:background="@drawable/ic_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_freccia_giu"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:background="@drawable/ic_down"
            app:layout_constraintEnd_toEndOf="@+id/button_arrow_up"
            app:layout_constraintTop_toBottomOf="@+id/button_arrow_up" />

        <Button
            android:id="@+id/button_arrow_left"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:background="@drawable/ic_left"
            app:layout_constraintBottom_toTopOf="@+id/button_freccia_giu"
            app:layout_constraintEnd_toStartOf="@+id/button_arrow_up"
            app:layout_constraintHorizontal_bias="0.606"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_arrow_up" />


        <Button
            android:id="@+id/button_arrow_right"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:layout_weight="1"
            android:background="@drawable/ic_right"
            app:layout_constraintStart_toEndOf="@+id/button_arrow_up"
            app:layout_constraintTop_toTopOf="@+id/button_arrow_left" />

        <Button
            android:id="@+id/button_tasto_enter"
            android:layout_width="65dp"
            android:layout_height="160dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/tasto_enter"
            android:onClick="onclick_button_tasto_enter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_delta_x_testo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="92dp"
            android:text="Delta X:"
            app:layout_constraintStart_toEndOf="@+id/button_arrow_right"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_delta_y_testo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Delta Y:"
            app:layout_constraintStart_toStartOf="@+id/textView_delta_x_testo"
            app:layout_constraintTop_toBottomOf="@+id/textView_delta_x_testo" />

        <TextView
            android:id="@+id/textView_delta_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="ValX"
            app:layout_constraintStart_toEndOf="@+id/textView_delta_x_testo"
            app:layout_constraintTop_toTopOf="@+id/textView_delta_x_testo" />

        <TextView
            android:id="@+id/textView_delta_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="ValY"
            app:layout_constraintStart_toEndOf="@+id/textView_delta_y_testo"
            app:layout_constraintTop_toTopOf="@+id/textView_delta_y_testo" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>