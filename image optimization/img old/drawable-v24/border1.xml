<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Commento: rettangolo bordo -->
    <item>
        <shape xmlns:android= "http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke android:width="2dp" android:color="#06d9ec"/>
            <corners android:radius="10dp"/>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />


        </shape>
    </item>


    <!-- Commento: rettangolo interno -->
    <item>
        <shape xmlns:android= "http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#E5E0DE" />
            <corners android:radius="10dp"/>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

        </shape>
    </item>



</layer-list>